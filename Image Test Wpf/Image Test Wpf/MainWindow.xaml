<Window x:Class="Image_Test_Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_Test_Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="image" Width="200" Height="200"></Image>
        <Button Click="SelectImage" Content="Выбрать изображение" VerticalAlignment="Bottom"></Button>
        <Button Click="LoadImage" Content="Загрузить изображение" VerticalAlignment="Top" Margin="0,389,0,0"></Button>

    </Grid>
</Window>
